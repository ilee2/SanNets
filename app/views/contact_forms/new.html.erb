<center><h1>Contact Form</h1></center>




<div class="row">
  <center><div class="col-md-6 col-md-offset-3">
    <%= form_for(@contact) do |f| %>
      <%= f.label :name %><br>
      <%= f.text_field :name %></br>

      <%= f.label :email %><br>
      <%= f.email_field :email %></br>


      <%= f.label :mesage, "Message" %></br>
      <%= f.text_area :mesage, :cols => 60, :rows => 10 %></br>

      <%= f.submit "Send my message", class: "btn btn-primary" %>
    <% end %>
  </div></center>
</div>
