<h1>Contact Form</h1>




<div class="row">
  <center><div class="col-md-6 col-md-offset-3">
    <%= form_for(@contact) do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name %></br>

      <%= f.label :email %>
      <%= f.email_field :email %></br>


      <%= f.label :mesage, "Message" %></br>
      <%= f.text_area :mesage, :cols => 100, :rows => 10 %>

      <%= f.submit "Send my message", class: "btn btn-primary" %>
    <% end %>
  </div></center>
</div>
